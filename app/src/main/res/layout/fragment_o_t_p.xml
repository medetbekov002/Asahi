<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".presentation.fragments.authorization.otp.OTPFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/tv_second_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24_black"
            android:textColor="@color/skip_text_color"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:layout_width="320dp"
        android:layout_height="24dp"
        android:layout_marginTop="84dp"
        android:gravity="center_horizontal|top"
        android:text="@string/text_enter_code"
        android:textColor="#757575"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="320dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="56dp"
        android:gravity="center_horizontal|top"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="+996705478789" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_code"
            android:layout_width="228dp"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_code_1"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_for_auth_views"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/et_code_2"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_for_auth_views"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/et_code_3"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="@drawable/bg_for_auth_views"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1" />

            <EditText
                android:id="@+id/et_code_4"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_for_auth_views"
                android:gravity="center"
                android:hint="0"
                android:inputType="number"
                android:maxLength="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_wrong_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="8dp"
            android:text="Неверный код"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:visibility="invisible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_send_code_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:gravity="center"
        android:lineSpacingExtra="4sp"
        android:text="Отправить повторно через \n 00:59"
        android:textColor="@color/blue"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        android:layout_width="320dp"
        android:layout_height="54dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#F5F5F5"
        android:text="@string/text_continue"
        android:textColor="#B0B0B0"
        app:cornerRadius="16dp" />

</LinearLayout>